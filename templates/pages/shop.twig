{% extends "base.twig" %}

{% block title %}Avia | Рейсы{% endblock %}

{% block content %}
    <div class="container mt-5 mb-5">
        <h2 class="mb-4">Доступные рейсы</h2>

        <!-- Фильтры -->
        <form method="get" class="row g-3 mb-4">
            <div class="col-md-3">
                <label for="date" class="form-label">Дата вылета</label>
                <input type="date" name="date" id="date" class="form-control" value="{{ app.request.query.get('date') }}">
            </div>
            <div class="col-md-3">
                <label for="from" class="form-label">Откуда</label>
                <select name="from" id="from" class="form-select">
                    <option value="">Все города</option>
                    {% for city in cities %}
                        <option value="{{ city.code }}" {% if app.request.query.get('from') == city.code %}selected{% endif %}>
                            {{ city.name }}
                        </option>
                    {% endfor %}
                </select>
            </div>
            <div class="col-md-3">
                <label for="to" class="form-label">Куда</label>
                <select name="to" id="to" class="form-select">
                    <option value="">Все города</option>
                    {% for city in cities %}
                        <option value="{{ city.code }}" {% if app.request.query.get('to') == city.code %}selected{% endif %}>
                            {{ city.name }}
                        </option>
                    {% endfor %}
                </select>
            </div>
            <div class="col-md-3 d-flex align-items-end">
                <button type="submit" class="btn btn-primary w-100">Показать рейсы</button>
            </div>
        </form>

        <!-- Рейсы -->
        {% if flights %}
            {% for flight in flights %}
                <div class="card mb-3 shadow-sm">
                    <div class="card-body d-flex flex-column flex-md-row justify-content-between align-items-md-center">
                        <div>
                            <h5>{{ flight.from_city }} → {{ flight.to_city }}</h5>
                            <p class="text-muted mb-1">{{ flight.flight_number }} | {{ flight.aircraft }}</p>
                            <p class="mb-0">Вылет: <strong>{{ flight.depart_time }}</strong> — Прибытие: <strong>{{ flight.arrive_time }}</strong></p>
                            <p class="mb-0">Осталось мест: {{ flight.places_left }}</p>
                        </div>
                        <div class="text-end">
                            <h4 class="text-primary">{{ flight.price }} ₽</h4>
                            <a href="/book/{{ flight.id }}" class="btn btn-success">Забронировать</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        {% else %}
            <p>Рейсы не найдены по заданным параметрам.</p>
        {% endif %}
    </div>
{% endblock %}
