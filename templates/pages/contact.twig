{% extends "base.twig" %}

{% block title %}Avia | Контакты{% endblock %}

{% block content %}
    <div class="container mt-5">
        <!-- Hero Section -->
        <div class="p-5 mb-4 bg-light rounded-3">
            <div class="container-fluid py-5">
                <h1 class="display-5 fw-bold">Свяжитесь с нами</h1>
                <p class="col-md-8 fs-4">Мы иногда готовы помочь вам и ответить на все ваши вопросы.</p>
            </div>
        </div>

        <div class="row mb-5">
            <!-- Контактная информация -->
            <div class="col-md-4 mb-4">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <h3 class="card-title mb-4">Контактная информация</h3>

                        <div class="d-flex mb-3">
                            <i class="bi bi-geo-alt-fill text-primary fs-4 me-3"></i>
                            <div>
                                <h5>Адрес</h5>
                                <p class="text-muted mb-0">г. Москва, ул. Авиационная, 1</p>
                            </div>
                        </div>

                        <div class="d-flex mb-3">
                            <i class="bi bi-telephone-fill text-primary fs-4 me-3"></i>
                            <div>
                                <h5>Телефон</h5>
                                <p class="text-muted mb-0">+7 (800) 123-45-67</p>
                            </div>
                        </div>

                        <div class="d-flex mb-3">
                            <i class="bi bi-envelope-fill text-primary fs-4 me-3"></i>
                            <div>
                                <h5>Email</h5>
                                <p class="text-muted mb-0">info@avia.ru</p>
                            </div>
                        </div>

                        <div class="d-flex mb-3">
                            <i class="bi bi-clock-fill text-primary fs-4 me-3"></i>
                            <div>
                                <h5>Режим работы</h5>
                                <p class="text-muted mb-0">Пн-Пт: 9:00 - 20:00</p>
                                <p class="text-muted mb-0">Сб-Вс: 10:00 - 18:00</p>
                            </div>
                        </div>

                        <div class="mt-4">
                            <h5>Социальные сети</h5>
                            <div class="d-flex gap-3">
                                <a href="#" class="text-primary fs-4"><i class="bi bi-facebook"></i></a>
                                <a href="#" class="text-primary fs-4"><i class="bi bi-instagram"></i></a>
                                <a href="#" class="text-primary fs-4"><i class="bi bi-twitter"></i></a>
                                <a href="#" class="text-primary fs-4"><i class="bi bi-youtube"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Форма обратной связи -->
            <div class="col-md-8">
                <div class="card border-0 shadow-sm">
                    <div class="card-body p-4">
                        <h3 class="card-title mb-4">Напишите нам, но мы скорее всего не ответим</h3>
                        <form method="post" action="/handlers/contact.php">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="name" class="form-label">Ваше имя</label>
                                    <input type="text" class="form-control" id="name" name="name" required>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="email" class="form-label">Email</label>
                                    <input type="email" class="form-control" id="email" name="email" required>
                                </div>
                            </div>
                            <div class="mb-3">
                                <label for="subject" class="form-label">Тема</label>
                                <input type="text" class="form-control" id="subject" name="theme" required>
                            </div>
                            <div class="mb-3">
                                <label for="message" class="form-label">Сообщение</label>
                                <textarea class="form-control" id="message" name="message" rows="5" required></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary">Отправить сообщение</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- Офисы -->
        <div class="row mb-5">
            <div class="col-12">
                <h2 class="mb-4">Наши офисы</h2>
                <div class="row">
                    <div class="col-md-4 mb-4">
                        <div class="card border-0 shadow-sm h-100">
                            <div class="card-body">
                                <h5 class="card-title">Москва</h5>
                                <p class="text-muted">Центральный офис</p>
                                <p>ул. Авиационная, 1</p>
                                <p>+7 (495) 123-45-67</p>
                                <p>moscow@avia.ru</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 mb-4">
                        <div class="card border-0 shadow-sm h-100">
                            <div class="card-body">
                                <h5 class="card-title">Санкт-Петербург</h5>
                                <p class="text-muted">Северо-Западный офис</p>
                                <p>пр. Невский, 100</p>
                                <p>+7 (812) 123-45-67</p>
                                <p>spb@avia.ru</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 mb-4">
                        <div class="card border-0 shadow-sm h-100">
                            <div class="card-body">
                                <h5 class="card-title">Екатеринбург</h5>
                                <p class="text-muted">Уральский офис</p>
                                <p>ул. Ленина, 50</p>
                                <p>+7 (343) 123-45-67</p>
                                <p>ekb@avia.ru</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Карта -->
        <div class="row mb-5">
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-body p-0">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2244.4327157385847!2d37.5327!3d55.7558!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zNTXCsDQ1JzIwLjkiTiAzN8KwMzEnNTcuNyJF!5e0!3m2!1sru!2sru!4v1620000000000!5m2!1sru!2sru"
                                width="100%"
                                height="450"
                                style="border:0;"
                                allowfullscreen=""
                                loading="lazy">
                        </iframe>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}