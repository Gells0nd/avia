{% extends "base.twig" %}

{% block title %}Avia | Новости{% endblock %}

{% block content %}
    <div class="container mt-5">
        <!-- Hero Section -->
        <div class="p-5 mb-4 bg-light rounded-3">
            <div class="container-fluid py-5">
                <h1 class="display-5 fw-bold">Новости</h1>
                <p class="col-md-8 fs-4">Будьте в курсе последних событий и акций</p>
            </div>
        </div>

        <!-- Фильтры -->
        <div class="row mb-4">
            <div class="col-md-8">
                <div class="btn-group" role="group">
                    <button type="button" class="btn btn-outline-primary active">Все</button>
                    <button type="button" class="btn btn-outline-primary">Компания</button>
                    <button type="button" class="btn btn-outline-primary">Акции</button>
                    <button type="button" class="btn btn-outline-primary">Маршруты</button>
                </div>
            </div>
            <div class="col-md-4">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Поиск новостей...">
                    <button class="btn btn-primary" type="button">
                        Поиск
                    </button>
                </div>
            </div>
        </div>

        <!-- Список новостей -->
        <div class="row">
            {% for article in news %}
                <div class="col-md-6 mb-4">
                    <div class="card h-100">
                        {% if article.image %}
                            <img src="{{ article.image }}" class="card-img-top" alt="{{ article.title }}">
                        {% endif %}
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="badge bg-{{ article.category_color }}">{{ article.category }}</span>
                                <small class="text-muted">{{ article.date }}</small>
                            </div>
                            <h5 class="card-title">{{ article.title }}</h5>
                            <p class="card-text">{{ article.content }}</p>
                            <a href="/news/{{ article.id }}" class="btn btn-outline-primary">Читать далее</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

        <!-- Пагинация -->
        <nav aria-label="Page navigation" class="mt-4">
            <ul class="pagination justify-content-center">
                <li class="page-item disabled">
                    <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Предыдущая</a>
                </li>
                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item">
                    <a class="page-link" href="#">Следующая</a>
                </li>
            </ul>
        </nav>
    </div>
{% endblock %}